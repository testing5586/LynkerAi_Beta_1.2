
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Header from '@/components/common/Header'
import Footer from '@/components/common/Footer'
import MasterRegistrationForm from '@/components/master-registration-form/MasterRegistrationForm'
---

<BaseLayout title="命理师注册 - 灵客AI">
<Header client:load variant="minimal" currentPath="/master-registration-form" />
  
  <main class="min-h-[calc(100vh-128px)] bg-background flex items-center justify-center py-12 px-4">
    <MasterRegistrationForm client:load />
  </main>

  <Footer client:load variant="simple" />
</BaseLayout>

<style>
  :global(body) {
    background: linear-gradient(135deg, hsl(240 10% 8%) 0%, hsl(270 30% 12%) 100%);
  }
</style>
