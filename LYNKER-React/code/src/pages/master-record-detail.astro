import MasterRecordDetailContent from '@/components/master-record-detail/MasterRecordDetailContent.tsx'
import AIAssistantFloat from '@/components/common/AIAssistantFloat.tsx'
---

<BaseLayout title="批命详情 - 灵客AI">
