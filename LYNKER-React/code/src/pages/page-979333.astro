
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CommonHeader from '@/components/common/CommonHeader.tsx'
import AppSidebarLayout from '@/components/common/AppSidebarLayout.tsx'
import UserDashboardSidebar from '@/components/page-979333/UserDashboardSidebar.tsx'
import YearlyFortuneContent from '@/components/page-979333/YearlyFortuneContent.tsx'
import AIAssistantFloat from '@/components/common/AIAssistantFloat.tsx'
---

<BaseLayout title="流年运势 - 灵客AI">
