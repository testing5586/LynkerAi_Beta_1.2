
---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/common/Header';
import Footer from '@/components/common/Footer';
import ProfileSetupUserForm from '@/components/profile-setup-user/ProfileSetupUserForm';
---

<BaseLayout title="个人资料设置 - 灵客AI">
  <div class="min-h-screen flex flex-col bg-background">
    <Header client:load variant="minimal" currentPath="/profile-setup-user" />
    
    <main class="flex-1 container max-w-4xl mx-auto px-4 py-8">
      {/* Page Header */}
      <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">完善个人资料</h1>
        <p class="text-muted-foreground">
          设置您的个人信息和AI助手，为更好的命理体验做准备
        </p>
      </div>

      {/* Form Container */}
      <div class="glass-card rounded-lg p-8">
        <ProfileSetupUserForm client:load />
      </div>
    </main>

    <Footer client:load variant="simple" />
  </div>
</BaseLayout>

<style>
  :global(body) {
    background: linear-gradient(135deg, hsl(var(--background)) 0%, hsl(240 10% 12%) 100%);
  }
</style>
