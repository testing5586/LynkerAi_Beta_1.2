
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CommonHeader from '@/components/common/CommonHeader.tsx'
import Footer from '@/components/common/Footer.tsx'
import HeroSection from '@/components/prognosis-service-entry/HeroSection.tsx'
import ServiceTypeGrid from '@/components/prognosis-service-entry/ServiceTypeGrid.tsx'
import RecommendedMastersSection from '@/components/prognosis-service-entry/RecommendedMastersSection.tsx'
import QuickStatsSection from '@/components/prognosis-service-entry/QuickStatsSection.tsx'
import CallToActionSection from '@/components/prognosis-service-entry/CallToActionSection.tsx'
import AIAssistantFloat from '@/components/common/AIAssistantFloat.tsx'
---

<BaseLayout title="命理服务 - 灵客AI">
  <CommonHeader client:load currentPath="/prognosis-service-entry" />
  
  <main class="min-h-screen bg-background">
    <HeroSection client:load />
    <ServiceTypeGrid client:load />
    <RecommendedMastersSection client:load />
    <QuickStatsSection client:load />
    <CallToActionSection client:load />
  </main>

  <Footer variant="full" />
  <AIAssistantFloat client:idle />
</BaseLayout>

<style>
  main {
    background: linear-gradient(135deg, hsl(var(--background)) 0%, hsl(240 10% 12%) 100%);
  }
</style>
